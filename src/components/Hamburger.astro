---
import Icon from './Icon.astro'
---
<button>
  <Icon name="menu" size="2rem" />
</button>

<style>
  button {
    background-color: transparent;
    border: none;
    color: inherit;
    height: 2rem;
    padding: 0;
    width: 2rem;
  }
  button:hover {
    color: #b77a00;
    cursor: pointer;
  }
  @media screen and (min-width: 636px) {
    button {
      display: none;
    }
  }
</style>